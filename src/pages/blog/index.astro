---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/site/Section.astro";
import Disclaimer from "../../components/site/Disclaimer.astro";
import { posts } from "../../data/posts";

const metaTitle = "Blog | ATRA y Obesidad Salamanca";
const metaDescription = "Artículos y recursos sobre TCA, obesidad, prevención y apoyo familiar.";
const keywords = ["blog TCA", "recursos trastornos alimentarios", "prevención TCA"];
---

<Layout title={metaTitle} metaDescription={metaDescription} keywords={keywords}>
  <Section title="Blog" intro="Un espacio informativo con artículos, recursos y novedades relacionadas con los Trastornos de la Conducta Alimentaria y la obesidad.">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      {posts.map((post) => (
        <a
          href={`/blog/${post.slug}`}
          class="block rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md"
        >
          <h3 class="text-xl font-semibold text-slate-900">{post.title}</h3>
          <p class="mt-2 text-sm leading-relaxed text-slate-700">{post.excerpt}</p>
          <span class="mt-4 inline-flex text-sm font-semibold text-blue-700">Leer más</span>
        </a>
      ))}
    </div>
  </Section>

  <div class="mx-auto max-w-6xl px-4 pb-12 sm:px-6 lg:px-8">
    <Disclaimer />
  </div>
</Layout>
