---
export interface Item {
  question: string;
  answer: string;
}

export interface Props {
  items: Item[];
}

const { items } = Astro.props;
---
<div class="divide-y divide-slate-200 rounded-2xl border border-slate-200 bg-white shadow-sm">
  {items.map((item) => (
    <details class="group" open>
      <summary class="flex cursor-pointer items-start justify-between gap-3 px-6 py-4 text-left">
        <span class="text-base font-semibold text-slate-900">{item.question}</span>
        <span class="text-blue-700 transition group-open:rotate-45">+</span>
      </summary>
      <div class="px-6 pb-4 text-sm leading-relaxed text-slate-700">{item.answer}</div>
    </details>
  ))}
</div>
